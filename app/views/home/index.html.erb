<h1>Timeliner</h1>
<p id="strap">Build and share timelines of historical events<p> 

<div id='content_container'>

  <div id="top_timelines">
    <h3>Already built</h3>
		<%= render :partial => "top_chart", :collection => @top_charts %>
  </div>

	
	<div id="user_timelines">	
		<h3>Your Timelines</h3>
	 
		<% if current_user %>

		<%= render :partial => "chart_summary", :collection => @user_charts %>

		<%= button_to 'Add a new timeline', 'home/new', :remote => true, :method => :get, :id => :add_timeline %> 	
	<% else %> 
		<p>Sign in to add your timeline</p> 
	<% end %>
	
	</div> 
</div>
