<%= simple_form_for @timeline_chart do |f| %>
  <%= f.error_messages %>
    <%= f.input :title %>
    <%= f.input :start_date, :as => :date, :default => Date.parse('1800/1/1'), :start_year => 0, 
                            :end_year => 2020,  :discard_month => true, :discard_day => true,
                            :order => [:month, :year] %>

    <%= f.input :end_date, :as => :date, :default => Date.parse('1900/1/1'), :start_year => 0, 
                            :end_year => 2020,  :discard_month => true, :discard_day => true,
                            :order => [:month, :year] %>
    <%= f.button :submit, 'Save' %>
<% end %>
