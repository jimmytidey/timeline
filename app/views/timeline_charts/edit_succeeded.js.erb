<% flash_message = "Saved #{@timeline_chart.title}: #{@timeline_chart.start_date.year} - #{@timeline_chart.end_date.year}" %>
  /*Hide any flash notice divs*/
  $(".flash_notice").hide(300);
  $(".flash_error").hide(300);
  $(".error_messages").hide(300);

  /*Update the html of the div flash_notice with the new one*/
  $("#ajax_flash_notice").html("<%= escape_javascript(flash_message)%>");

  /*Show the div post_errors*/
  $("#ajax_flash_notice").show(300);

