<%= form_for @event, :remote=>true do |f| %>
  <%= f.label :title, "Title" %><br />
  <%= f.text_field :title %><br />
  
  <%= f.label :start_date, "Start Date" %><br />
  <%= f.text_field :start_date %><br />
  
  <%= f.label :end_date, "End Date" %><br />
  <%= f.text_field :end_date %><br />  
  
  <% myArray = ['blue', 'yellow', 'cream', 'magenta'] %>
  
  <%= f.label :color, "Colour" %><br />
  <%= f.select(:color, myArray)  %><br /> 
  
  <%= f.label :description, "Description" %><br />
  <%= f.text_area :description %><br /> 
  
  <%= f.submit %>
  
  <input class='bin' type='button' data-id='<%=@event.id %>' value='Delete' />
  
<% end %>
