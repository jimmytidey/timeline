<% require 'date' %>

<%= form_for @event, :remote=>true do |f| %>
  <%= f.label :title, "Title" %><br />
  <%= f.text_field :title %><br />
  
 
  <%= f.hidden_field :id, :id =>'edit_event_id' %>
  <%= f.hidden_field :start_date, :id =>'edit_start_date', :"data-date_as_int" => @event.start_date_as_int %>
  <%= f.hidden_field :end_date, :id =>'edit_end_date', :"data-date_as_int" => @event.end_date_as_int %>
  <%= f.hidden_field :band, :id =>'edit_band' %>
  
  <% myArray = ['blue', 'yellow', 'cream', 'magenta'] %>
  
  <%= f.label :color, "Colour" %><br />
  <%= f.select(:color, myArray)  %><br /> 
  
  <%= f.label :description, "Description"  %><br />
  <%= f.text_area :description, :id =>'edit_event_description' %><br /> 
  
  <input id='event_edit_submit' type='button' value='Save' />
  
  <input class='bin' type='button' data-id='<%=@event.id %>' value='Delete' />
  
<% end %>
