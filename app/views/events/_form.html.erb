<div id="<%= type %>_event_form">
<%= simple_form_for @event, :remote => true do |f| %>
  <%= f.error_messages %>
  
  <div class="input string required event_title" >
    <label class="string required">
      Event
    </label>
    <input class="string required"
    name="event[title]" size="50" type="text"
    value="<%= @event.title %>" />
  </div>
  
  <div class="input string required" >
    <label class="string required">
      Start date
    </label>
    <input class="string required event_start_date"
    name="event[start_year]" size="50" type="text"
    value="<%= @event.start_date.year if @event.start_date %>" />
  </div>

  <div class="input string required">
    <label class="string required">
      End date
    </label>
    <input class="string required event_end_date"
    name="event[end_year]" size="50" type="text"
    value="<%= @event.end_date.year if @event.end_date%>" />
  </div>
	
	<div id='color_selector'>
 	 <%=  f.input :color, :collection => %w{cream yellow blue magenta}, :prompt => "Colour", :label => "Colour" %>
	  <%= f.hidden_field :timeline_chart_id, :value => @timeline_chart.id %>
	</div>
	

	

  <% if type == 'new' %>
  <input type='hidden' name='event[description]' id='event_description' /> 
    <%= f.submit :value => 'Add Â»' %>
  <% else %>
  	<textarea name='event[description]' id='event_description_text' ><%= @event.description %></textarea>  
    <%= f.submit :value => 'Save Â»' %>
  <% end %>

<% end %>

</div>
