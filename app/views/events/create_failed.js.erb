<%= render :file => 'global/hide_flash_and_errors' %>

<% flash_message = "The event did not save due to a problem." %>
$("#ajax_flash_error").html("<%= escape_javascript(flash_message)%>");
$("#event_errors").html("<%= escape_javascript(error_messages_for(@event))%>");
$("#ajax_flash_error").show(300);
$("#event_errors").show(300);
